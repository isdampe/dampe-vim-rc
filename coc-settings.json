{
	"languageserver": {
		"intelephense": {
			"command": "intelephense",
			"args": ["--stdio"],
			"filetypes": ["php"],
			"initializationOptions": {
				"storagePath": "/tmp/intelephense"
			}
		},
		"clangd": {
			"command": "clangd",
			"args": ["--background-index"],
			"rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
			"filetypes": ["c", "cpp", "objc", "objcpp"]
		}
	}
}
